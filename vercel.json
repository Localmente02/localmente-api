{
  "version": 2,
  "headers": [
    // La sezione headers non serve più qui, perché la gestiamo dentro orchestrator.js
    // La teniamo per sicurezza o la possiamo rimuovere.
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "https://localmente-v3-core.web.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ],
  "crons": [
    // La sezione crons rimane, ma faremo puntare anche questi all'orchestrator
    {
      "path": "/api/clean_expired_offers",
      "schedule": "0 3 * * 1"
    },
    {
      "path": "/api/update_vehicle_status",
      "schedule": "0 0 * * *"
    }
  ],
  "rewrites": [
    // Tutti puntano allo stesso file!
    { "source": "/api/clean_expired_offers", "destination": "/api/orchestrator" },
    { "source": "/api/create-payment-intent", "destination": "/api/orchestrator" },
    { "source": "/api/create-stripe-account-link", "destination": "/api/orchestrator" },
    { "source": "/api/generate-imagekit-token", "destination": "/api/orchestrator" },
    { "source": "/api/get-available-slots", "destination": "/api/orchestrator" },
    { "source": "/api/get-stripe-balance-and-transactions", "destination": "/api/orchestrator" },
    { "source": "/api/gift-recommender", "destination": "/api/orchestrator" },
    { "source": "/api/webhook", "destination": "/api/orchestrator" },
    { "source": "/api/update_vehicle_status", "destination": "/api/orchestrator" },
    { "source": "/api/get-crypto-exchange-rate", "destination": "/api/orchestrator" },
    { "source": "/api/smart-search", "destination": "/api/orchestrator" }
  ]
}
