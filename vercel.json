{
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-control-allow-credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "https://localmente-v3-core.web.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/clean_expired_offers",
      "schedule": "*/2 * * * *"
    }
  ],
  "rewrites": [
    { "source": "/api/generate-imagekit-token", "destination": "/api/generate-imagekit-token.js" },
    { "source": "/api/clean_expired_offers", "destination": "/api/clean_expired_offers.js" },
    { "source": "/api/create-payment-intent", "destination": "/api/create-payment-intent.js" },
    { "source": "/api/create-stripe-account-link", "destination": "/api/create-stripe-account-link.js" },
    { "source": "/api/get-stripe-balance-and-transactions", "destination": "/api/get-stripe-balance-and-transactions.js" },
    { "source": "/api/webhook", "destination": "/api/webhook.js" }
  ]
}
